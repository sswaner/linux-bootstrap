[user]
	# Update these with your information
	name = Your Name
	email = your.email@example.com

[core]
	editor = nvim
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = less -FRX

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	colorMoved = zebra

[merge]
	conflictstyle = diff3

[rerere]
	enabled = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[alias]
	# Short status
	s = status -s

	# Show verbose status
	st = status

	# Add all changes
	aa = add --all

	# Commit
	ci = commit

	# Commit with message
	cm = commit -m

	# Amend last commit
	amend = commit --amend --no-edit

	# Checkout
	co = checkout

	# Create new branch
	cob = checkout -b

	# Branch list
	br = branch -v

	# Branch list with remotes
	bra = branch -a -v

	# Delete branch
	brd = branch -d

	# Pretty log
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

	# Detailed log
	ll = log --pretty=format:'%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --numstat

	# Show last commit
	last = log -1 HEAD --stat

	# Diff staged changes
	dc = diff --cached

	# Diff unstaged changes
	df = diff

	# Show what changed in last commit
	dlc = diff --cached HEAD^

	# Undo last commit but keep changes
	undo = reset HEAD~1 --mixed

	# Discard all local changes
	discard = checkout -- .

	# Stash with message
	stash-save = stash save -u

	# List stashes
	stash-list = stash list

	# Apply and drop stash
	stash-pop = stash pop

	# Show stash diff
	stash-show = stash show -p

	# Pull with rebase
	pr = pull --rebase

	# Push current branch
	pc = push origin HEAD

	# Force push with lease (safer than --force)
	pf = push --force-with-lease

	# Show all aliases
	aliases = config --get-regexp alias

[help]
	autocorrect = 1

[credential]
	helper = cache --timeout=3600

# Include local gitconfig if it exists (for machine-specific settings)
[include]
	path = ~/.gitconfig.local
